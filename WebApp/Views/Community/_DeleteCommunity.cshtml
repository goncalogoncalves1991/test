@model WebApp.Models.DeleteCommunity

<center>
    <h2>Delete Community</h2>
    <hr />
</center>


<form action=@Url.Action("DeleteCommunity","Community") method="post">
    @Html.AntiForgeryToken()

    @if (ViewData["Error"] != null)
    {
        <div class="row alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            @ViewData["Error"]

        </div>
    }

    <div class="form-horizontal ">

        <input type="hidden" name="Id" value="@Model.Id" />
        
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder="Community name" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Delete" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>




