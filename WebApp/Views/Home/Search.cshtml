@model List<DataAccess.Models.DTOs.community>

@{
    ViewBag.Title = "Communities";
}

@section Styles {
    <link href="@Href("~/Content/thumbnails.css")" rel="stylesheet" type="text/css" />
}

<div class="jumbotron">
    <div class="row">
        <div class="col-md-4">
            <img id="img_logo" alt="Logo" src="@Url.Content("~/Content/Images/Logo.png")" />
        </div>
        <div class="col-md-8">
            <h2>Encontra as tuas Comunidades e Eventos</h2>
            
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 col-md-6 pull-right">
            <form class="navbar-form" role="search">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search" name="q">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    </div>
                </div>
            </form>
        </div>       

    </div>
</div>


<div class="container">
    <div class="row destacados">
        @foreach (var item in @Model)
        {   
            <div class="col-md-4 col-sm-6 col-xs-12 align  ">
                <div>
                    <img width="150" height="150" src="@item.avatar" alt="@Url.Content("~/Content/Images/No_image_available.png")" class="img-circle img-thumbnail hidden-xs ">
                    <h2>@item.name</h2>
                    <p>
                        @item.description.Substring(0, Math.Min(item.description.Length, 100))...
                    </p>
                    
                    @Html.ActionLink("Go to »", "Get", new { controller = "Community", id = @item.name}, new { @class = "btn btn-primary" } )
                    
                </div>
            </div>
        }
    </div>
</div>

